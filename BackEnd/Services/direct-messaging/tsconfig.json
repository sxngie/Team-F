{
	"compilerOptions": {
		"target": "ES2021", // default is es5
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"importHelpers": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"noImplicitAny": true,
		"baseUrl": "src" // saves us the use of '../../../file' and instead lets us just use 'file'
	},
	"include": ["src"]
}
